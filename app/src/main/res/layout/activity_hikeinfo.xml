<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/redwood">

    <!-- Back to Profile Button -->
    <TextView
        android:id="@+id/text_hike_name"
        android:layout_width="211dp"
        android:layout_height="136dp"
        android:layout_marginTop="8dp"
        android:backgroundTint="#D71313"
        android:gravity="center|top"
        android:shadowColor="#E01919"
        android:shadowRadius="50"
        android:text="MY PROFILE"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#C01B1B"
        android:textColorHint="#A62626"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonBackToProfile"
        android:layout_width="68dp"
        android:layout_height="61dp"
        android:layout_marginTop="7dp"
        android:backgroundTint="#BFFFFFFF"
        android:text="Back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Show Hike Details Button -->
    <Button
        android:id="@+id/buttonShowDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:backgroundTint="#BFFFFFFF"
        android:text="Show Hike Details"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_hike_name" />

    <!-- Add to My List Button -->

    <EditText
        android:id="@+id/editTextAddHike"
        android:layout_width="254dp"
        android:layout_height="43dp"
        android:layout_marginTop="28dp"
        android:background="#BFFFFFFF"
        android:backgroundTint="#FFFFFF"
        android:bufferType="spannable"
        android:hint="   Enter Custom List"
        android:textColor="#000000"
        app:layout_constraintEnd_toStartOf="@id/buttonAddHike"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonShowDetails" />


    <Button
        android:id="@+id/buttonAddHike"
        android:layout_width="104dp"
        android:layout_height="44dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#BFFF0000"
        android:text="Add Hike"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/editTextAddHike" />

    <Button
        android:id="@+id/buttonReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:backgroundTint="#BFFFFFFF"
        android:text="Review"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonAddHike" />

</androidx.constraintlayout.widget.ConstraintLayout>