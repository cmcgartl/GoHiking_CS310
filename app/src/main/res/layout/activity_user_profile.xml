<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="16dp"
    tools:context=".UserActivity">

    <!-- Title: User Profile -->
    <TextView
        android:id="@+id/titleUserProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User Profile"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Back to Home Button -->
    <Button
        android:id="@+id/buttonBackToHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Home"
        app:layout_constraintTop_toBottomOf="@id/titleUserProfile"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Add Friend Section -->
    <EditText
        android:id="@+id/editTextAddFriend"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Enter friend's email"
        app:layout_constraintTop_toBottomOf="@id/buttonBackToHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonAddFriend"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonAddFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Friend"
        app:layout_constraintTop_toTopOf="@id/editTextAddFriend"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Search for Hike Section -->
    <EditText
        android:id="@+id/editTextSearchHike"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Search for a hike"
        app:layout_constraintTop_toBottomOf="@id/editTextAddFriend"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/buttonSearchHike"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/buttonSearchHike"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Search"
        app:layout_constraintTop_toTopOf="@id/editTextSearchHike"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>